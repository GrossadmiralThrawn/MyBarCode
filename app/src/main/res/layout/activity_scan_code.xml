<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mybarcode.ScanCodeActivity">

    <Button
        android:id="@+id/scanNewCodeButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="543dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="116dp"
        android:autoSizeTextType="uniform"
        android:text="@string/scan_new_code_button"
        app:autoSizeStepGranularity="2sp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="653dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="16dp"
        android:autoSizeTextType="uniform"
        android:textSize="16sp"
        android:text="@string/return_button"
        app:autoSizeStepGranularity="2sp" />

    <TextView
        android:id="@+id/scannedResultTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="515dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text=""
        app:autoSizeStepGranularity="2sp" />

    <TextView
        android:id="@+id/showPositionOfResultTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="2sp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="572dp"
        android:text="@string/tell_information_text_view" />

    <Button
        android:id="@+id/scannedCodeShareButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="543dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="114dp"
        android:text="@string/share_scanned_code"
        android:textSize="16sp"
        app:autoSizeStepGranularity="2sp" />

</RelativeLayout>
